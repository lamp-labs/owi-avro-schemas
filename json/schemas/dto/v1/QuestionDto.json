{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "QuestionDto",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for the question"
    },
    "mediaId": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for the media resource"
    },
    "mediaUrl": {
      "type": "string",
      "format": "uri",
      "description": "Media URL must be a valid URL",
      "minLength": 1
    },
    "description": {
      "type": "string",
      "description": "Description of the question",
      "minLength": 1
    },
    "rightAnswerPrompt": {
      "type": "string",
      "description": "Prompt for the correct answer",
      "minLength": 1
    },
    "maxDuration": {
      "type": "number",
      "description": "Maximum duration allowed for answering the question"
    },
    "createdAt": {
      "type": "string",
      "format": "date-time",
      "description": "Creation timestamp",
      "readOnly": true
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time",
      "description": "Last update timestamp",
      "readOnly": true
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of tags associated with the question"
    }
  },
  "required": ["mediaUrl", "description", "rightAnswerPrompt"],
  "additionalProperties": false
}
